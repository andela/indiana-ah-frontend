{
  "plugins": ["react"],
  "extends": ["eslint:recommended", "plugin:react/recommended", "airbnb-base"],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "one-var-declaration-per-line": 0,
    "no-use-before-define": 1,
    "react/prop-types": 2,
    "comma-dangle": "off",
    "max-len": [
      1,
      90,
      2,
      {
        "ignoreComments": true
      }
    ],
    "quotes": ["error", "single"]
  },
  "parser": "babel-eslint",
  "globals": {
    "localStorage": true,
    "document": true,
    "require": true,
    "window": true
  }
}
